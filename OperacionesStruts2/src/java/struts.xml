"http://struts.apache.org/dtds/struts-2.0.dtd">

<!--NO COPIAR Y PEGAR LA PARTE DE ABAJO POR CONFIGURACIONES DISTINTAS, NO DEJAR ESPACIOS-->
<struts>
    <package name="default" extends="struts-default">
        <!--NAME: ACTION FORM  CLASS: A QUE CLASE IRA   METHOD: QUE METODO DE LA CLASE-->
        <!--RECOMENDACION: EL ACTION Y EL METODO LLAMARSE IGUAL PARA SABER A QUE CORRESPONDE-->
        
        <action name="calcular" class="controller.operaciones.OperacionesAction" method="calcular">
            <result name="success">vista/jsp/ResultadoOperaciones.jsp</result>
            <result name="error">vista/jsp/Error.jsp</result>
        </action>        
    </package>
    
</struts>
